<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:GridLayoutLabTask2.ViewModels"
    x:Class="GridLayoutLabTask2.Views.MainPage"
    x:DataType="viewmodel:MainViewModel"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout>
            <!-- Header -->
            <Label
                Text="Your Name and ID here"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,20,0,10"
                FontAttributes="Bold" />

            <!-- Puppy Image -->
            <Frame
                HasShadow="False"
                Padding="0"
                CornerRadius="0"
                Margin="0,0,0,10">
                <Image
                    Source="{Binding Puppy.ImageSource}"
                    Aspect="AspectFill"
                    HeightRequest="220" />
            </Frame>

            <!-- Info Card -->
            <Frame
                CornerRadius="20"
                Margin="20,0,20,10"
                BackgroundColor="#FFF9E6">
                <VerticalStackLayout Padding="15">

                    <Label 
                        Text="{Binding Puppy.Name}"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="Black" />

                    <Label 
                        Text="{Binding Puppy.Breed, StringFormat='{0} | '}"
                        FontSize="14"
                        TextColor="#6E6E6E"
                        Margin="0,2,0,5">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Puppy.Breed}" />
                                <Span Text=" | " />
                                <Span Text="{Binding Puppy.Age}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <HorizontalStackLayout>
                        <Image Source="{Binding Puppy.LocationIconSource}"
                               HeightRequest="16"
                               WidthRequest="16" />
                        <Label Text="{Binding Puppy.Location}"
                               FontSize="13"
                               TextColor="#6E6E6E"
                               LineBreakMode="WordWrap"
                               Margin="5,0,0,0" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Owner Info -->
            <HorizontalStackLayout Padding="20,0,20,0" Spacing="10">
                <Image Source="{Binding Puppy.OwnerImageSource}"
                       HeightRequest="45"
                       WidthRequest="45"
                       Aspect="AspectFill">
                    <Image.Clip>
                        <EllipseGeometry Center="22.5,22.5" RadiusX="22.5" RadiusY="22.5" />
                    </Image.Clip>
                </Image>
                <VerticalStackLayout>
                    <Label Text="{Binding Puppy.OwnerName}"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="{Binding Puppy.OwnerTitle}"
                           FontSize="13"
                           TextColor="#6E6E6E" />
                </VerticalStackLayout>
                <Label Text="{Binding Puppy.DatePosted}"
                       FontSize="13"
                       TextColor="#6E6E6E"
                       HorizontalOptions="EndAndExpand"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Description -->
            <Label Text="{Binding Puppy.Description}"
                   FontSize="14"
                   TextColor="Black"
                   Margin="20,10,20,10"
                   LineBreakMode="WordWrap" />

            <!-- Adoption Button -->
            <Button
                Text="Adoption"
                Command="{Binding AdoptPuppyCommand}"
                BackgroundColor="#FFD34E"
                TextColor="Black"
                CornerRadius="20"
                FontAttributes="Bold"
                WidthRequest="200"
                HeightRequest="45"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
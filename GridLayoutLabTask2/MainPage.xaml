<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GridLayoutLabTask2.MainPage"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout>
            <!-- Header -->
            <Label 
                Text="Your Name and ID here"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,20,0,10"
                FontAttributes="Bold" />

            <!-- Puppy Image -->
            <Frame
                HasShadow="False"
                Padding="0"
                CornerRadius="0"
                Margin="0,0,0,10">
                <Image
                    Source="puppy.jpg"
                    Aspect="AspectFill"
                    HeightRequest="220" />
            </Frame>

            <!-- Info Card -->
            <Frame
                CornerRadius="20"
                Margin="20,0,20,10"
                BackgroundColor="#FFF9E6">
                <VerticalStackLayout Padding="15">

                    <HorizontalStackLayout>
                        <Label Text="Robin Hood"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label Text="♂"
                               FontSize="20"
                               Margin="5,0,0,0" />
                    </HorizontalStackLayout>

                    <Label Text="Pug | 1 year old"
                           FontSize="14"
                           TextColor="#6E6E6E"
                           Margin="0,2,0,5" />

                    <HorizontalStackLayout>
                        <Image Source="location.png"
                               HeightRequest="16"
                               WidthRequest="16" />
                        <Label Text="3B, Lorong 88, Taman Rantau Panjang, 96000 Sibu, Sarawak"
                               FontSize="13"
                               TextColor="#6E6E6E"
                               LineBreakMode="WordWrap"
                               Margin="5,0,0,0" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Owner Info -->
            <HorizontalStackLayout Padding="20,0,20,0" Spacing="10">
                <Image Source="owner.jpg"
                       HeightRequest="45"
                       WidthRequest="45"
                       Aspect="AspectFill">
                    <Image.Clip>
                        <EllipseGeometry Center="22.5,22.5" RadiusX="22.5" RadiusY="22.5" />
                    </Image.Clip>
                </Image>
                <VerticalStackLayout>
                    <Label Text="Jeon Jungkook"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="Black" />
                    <Label Text="Owner"
                           FontSize="13"
                           TextColor="#6E6E6E" />
                </VerticalStackLayout>
                <Label Text="1.11.2024"
                       FontSize="13"
                       TextColor="#6E6E6E"
                       HorizontalOptions="EndAndExpand"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Description -->
            <Label Text="Hi! Robin the Pug is simply a tiny tornado of fur, wrinkles, and endless charm!"
                   FontSize="14"
                   TextColor="Black"
                   Margin="20,10,20,10"
                   LineBreakMode="WordWrap" />

            <!-- Adoption Button -->
            <Button
                Text="Adoption"
                BackgroundColor="#FFD34E"
                TextColor="Black"
                CornerRadius="20"
                FontAttributes="Bold"
                WidthRequest="200"
                HeightRequest="45"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
